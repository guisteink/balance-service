{
  "name": "balance-service",
  "version": "2.0.0",
  "main": "index.js",
  "repository": "https://github.com/guisteink/balance-service.git",
  "author": "Guilherme <guilherme.steink@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "express": "^4.18.1",
    "flatted": "^3.2.7",
    "fs": "^0.0.1-security",
    "jest": "^29.3.1",
    "mocha": "^10.2.0",
    "redis": "^4.6.4",
    "sha256": "^0.2.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "redis": "concurrently \"redis-cli flushall\" \"redis-server\"",
    "redis-list": "redis-cli --scan | head -1000",
    "redis-clear": "redis-cli flushall",

    "test:all": "jest --watchAll --detectOpenHandles",
    "test": "jest",

    "server-lrt": "concurrently \"npm run load-balancer-lrt\" \"npm run service-one\"",

    "server-lc": "concurrently \"npm run load-balancer-lc\" \"npm run service-one\" \"npm run service-two\" \"npm run service-three\"",

    "server-rr-cached": "concurrently \"npm run redis\" \"npm run load-balancer-rr-cached\" \"npm run service-one\" \"npm run service-two\" \"npm run service-three\"",
    "server-rr": "concurrently \"npm run load-balancer-rr\" \"npm run service-one\"",

    "server-wrr": "concurrently \"npm run load-balancer-wrr\" \"npm run service-one\"",
    "server-wrr-cached": "concurrently \"npm run load-balancer-wrr-cached\" \"npm run service-one\" \"npm run service-two\" \"npm run service-three\"",

    "load-balancer-rr-cached": "node src/servers/cache/round-robin-server.js --inspect > output/cache/rr.csv",
    "load-balancer-rr": "node src/servers/round-robin-server.js --inspect > output/rr.csv",

    "load-balancer-wrr-cached": "node src/servers/cache/weighted-round-robin-server.js > output/cache/wrr.csv",
    "load-balancer-wrr": "node src/servers/weighted-round-robin-server.js > output/wrr.csv",

    "load-balancer-lc": "node src/servers/least-connection.js > output/lc.csv",

    "load-balancer-lrt": "node src/servers/least-response-time.js > output/lrt.csv",

    "service-one": "node --stack-size=32000 src/mock-server/server-one.js",
    "service-two": "node --stack-size=32000 src/mock-server/server-two.js",
    "service-three": "node --stack-size=32000 src/mock-server/server-three.js"
  }
}
